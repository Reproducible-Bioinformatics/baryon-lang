; vi: ft=lisp
(bala sixteenS (
  (input_directory directory (desc "Path to input directory containing fastq files"))

  (desc "Pipeline for the analysis of 16S rRNA gene sequencing data")

  (run_docker
      (image "repbioinfo/qiime2023")
      (volumes (input_directory "/scratch"))
      (arguments "/home/qiime_full.sh"))
  (outputs
      (aligned_results directory "/aligned_results"
          (desc "Output directory containing analysis results")))
)
)

